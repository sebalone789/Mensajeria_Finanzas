<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="finanzas.p.e.mensajeriaepfinanzas.Control.ListarContactos"
    android:layout_marginTop="10.0sp">

    <RelativeLayout
        style="@style/colorTexto"
        android:layout_width="368dp"
        android:layout_height="485dp"
        android:padding="20px"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/txtSeleccionarGrupoListar"
            style="@style/colorTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:text="Seleccionar Grupo"
            android:layout_marginRight="10px"
            android:textSize="20sp"
            android:layout_marginStart="18dp"
            android:layout_alignParentLeft="true" />

        <Spinner
            android:id="@+id/listaGruposListar"
            style="@style/colorTexto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txtSeleccionarGrupoListar"
            android:layout_marginLeft="10dp"
            android:ems="100" />

        <ListView
            android:id="@+id/list"
            style="@style/colorTexto"
            android:layout_width="368dp"
            android:layout_height="495dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/listaGruposListar"
            android:layout_marginTop="14dp"
            android:dividerHeight="10.0sp"
            android:ems="10"
            android:listSelector="@drawable/listitemclick" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
